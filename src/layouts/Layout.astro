---
// Aici este Frontmatter-ul (DOAR codul de mai jos)
interface Props {
	title: string;
}

const { title } = Astro.props;


import "../styles/global.css"; 
---

<!doctype html>
<html lang="ro">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content="Descriere scurtă și convingătoare." />

		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	/* Dacă vrei să păstrezi stilurile astea, ele trebuie să fie CSS valid */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>